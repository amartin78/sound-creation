<header>
	<!-- navbar starts here -->
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle Navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<div class="sound-creation">
					<a href="/">Sound Creation</a>
				</div><!-- .sound-creation -->
			</div><!-- .navbar-header -->
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li><a href="#about-p">About</a>
					<li><a href="#video1">Video</a>
					<li><a href="#audio1">Audio</a>
					<li><a href="#gallery">Gallery</a>
					<li><a href="#contact">Contact</a>
				</ul><!-- .nav -->
			</div><!-- .navbar-collapse -->
		</div><!-- .container-fluid -->
	</div><!-- navbar ends here -->
	<div class="container">
		<div class="flash-message">
			<% flash.each do |key,value| %>
				<% if key == "alert" %>
					<div class="alert alert-danger message"><%= value %></div>
				<% elsif key == "notice" %>
					<div class="alert alert-success message"><%= value %></div>
				<% end %>
			<% end %>
		</div>
	</div><!-- .container -->
	<div class="container-fluid">
		<div data-ride="carousel" class="carousel slide" id="myCarousel">
			<ol class="carousel-indicators">
				<li class="active" data-target="#myCarousel" data-slide-to="0"></li>
				<li class="" data-target="#myCarousel" data-slide-to="1"></li>
				<!-- <li class="" data-target="#myCarousel" data-slide-to="2"> -->
			</ol>
			<div class="carousel-inner">
				<div class="item active">
					<img src="images/hi1.jpg" alt="">
				</div>
				<div class="item">
					<img src="images/hi2.jpg" alt="">						
				</div>
				<!-- <div class="item">	
					<img src="images/hi3.jpg" alt="">				
				</div> -->
			</div><!-- .carousel-inner -->
			<a href="#myCarousel" class="left carousel-control" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
			<a href="#myCarousel" class="right carousel-control" data-slide="next"><span class="glyphicon glyphicon-chevron-right" ></span></a>
		<div><!-- .carousel slide -->
	</div><!-- .container-fluid -->
</header>
